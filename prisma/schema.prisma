generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider          = "sqlite"
    url               = "file:../database/primary.db"
    shadowDatabaseUrl = "file:../database/shadow.db"
}

enum Status {
    COMPLETED
    IN_PROGRESS
    UNASSIGNED
}

model Job {
    id          String   @id @unique @default(uuid())
    sceneId     String
    description String   @default("N/A")
    attachments Json
    attributes  Json
    roles       Json
    deadline    DateTime
    status      Status   @default(UNASSIGNED)
    assignee    String   @default("N/A")
    work        String   @default("N/A")
}
